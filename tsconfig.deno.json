{
  "extends": "./tsconfig.json",
  "include": ["deno"],
  "exclude": [],
  "compilerOptions": {
    "rootDir": "./deno",
    "lib": ["es2020", "DOM"],
    "paths": {
      "mpesaflow/_shims/auto/*": ["deno/_shims/auto/*-deno"],
      "mpesaflow/*": ["deno/*"],
      "mpesaflow": ["deno/index.ts"],
    },
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "deno",
    "pretty": true,
    "sourceMap": true
  }
}
